platform :ios, '16.0'

target 'LexiMind' do
  use_frameworks!

  # Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Storage'
  pod 'Firebase/Messaging'
  
  # Google Sign In
  pod 'GoogleSignIn'
  
  # UI & Animations
  pod 'Kingfisher'
  pod 'SwiftMessages'
  pod 'lottie-ios'
  pod 'SnapKit'
end 